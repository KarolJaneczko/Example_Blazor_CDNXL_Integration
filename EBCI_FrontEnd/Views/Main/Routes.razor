@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="typeof(Program).Assembly" NotFoundPage="typeof(Views.Pages.NotFound)">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Views.Layouts.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
